{
  "name": "opchaves-web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "db:generate": "dotenv -- drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply --local DB",
    "db:migrate-production": "dotenv -- drizzle-kit migrate",
    "deploy": "CLOUDFLARE_ENV=production npm run build && wrangler deploy",
    "dev": "react-router dev --host 0.0.0.0",
    "postinstall": "npm run cf-typegen",
    "preview": "npm run build && vite preview",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
    "format": "prettier --write .",
    "test:e2e": "dotenv -e .env.test -- playwright test"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@uiw/react-md-editor": "^4.0.8",
    "better-auth": "^1.3.4",
    "drizzle-orm": "~0.36.3",
    "drizzle-seed": "^0.3.1",
    "isbot": "^5.1.27",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.7.1",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.1",
    "@playwright/test": "^1.54.2",
    "@react-router/dev": "^7.7.1",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "~0.28.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.13.2"
  }
}
